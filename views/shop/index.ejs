<%-include('../includes/head.ejs')%>
        <title><%=docTitle%></title>
    </head>
    <body>
        <%-include('../includes/navigation.ejs')%>
        <div class="jumbotron">
            <div class="container">
                <h1 class="display-4"><%=docTitle%></h1>
            </div>
        </div>
        <div class="container">
            <%if (products.length > 0) {%>
            <div class="row">
                <%for (let product of products) {%>
                <div class="col-sm-4">
                    <a href="/products/<%=product.id%>" class="text-decoration-none text-reset">
                        <div class="card mt-4" style="width: 18rem;">
                            <div class="card-body">
                                <img class="card-img-top" src="/<%=product.imageUrl%>" alt="Card image cap">
                                <h5 class="card-title mt-2"><%=product.title%></h5>
                                <p class="card-text"><%=product.description%></p>
                                <% if (isLoggedIn === true) { %>
                                    <%-include('../includes/add-to-cart.ejs', {product: product})%>
                                <% } %>
                            </div>
                            <div class="card-footer text-muted">
                                Rs. <%=product.price%>
                            </div>
                        </div>
                    </a>
                </div>
                <%}%>
                <%-include('../includes/pagination.ejs')%>
            </div>
            <%} else {%>
            <div class="text-center">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="display-4">fAIce</h5>
                        <p class="card-text">Check out fAIce - AI for face and expression detection</p>
                        <a href="/api/faice" class="btn btn-primary">Open fAIce</a>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
<%-include('../includes/end.ejs')%>