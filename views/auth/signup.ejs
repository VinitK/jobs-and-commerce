<%-include('../includes/head.ejs')%>
        <title><%=docTitle%></title>
        <style>
            body {
                background-image: radial-gradient(circle, rgba(255,153,205,1) 0%, rgba(163,237,255,1) 35%, rgba(255,232,118,1) 67%, rgba(126,255,99,1) 100%);
            }
            h5 {
                color: #00aaff;
            }
            .card {
                margin: 0 auto; /* Added */
                float: none; /* Added */
                margin-bottom: 10px; /* Added */
                width: 25rem;
                border: none;
                opacity: 0.7;
            }
        </style>
    </head>
    <body>
        <%-include('../includes/navigation.ejs')%>
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="display-4 text-center">Signup</h5>
                <form action="/signup" method="POST">
                    <% if (errorMessage) { %>
                        <div class="alert alert-warning" role="alert">
                            <%=errorMessage%>
                        </div>
                    <% } %>
                    <div class="form-group">
                        <label for="name">First Name</label>
                        <input type="text" class="form-control" name="name" value="<%= input.name %>" style="border-color: <%= validationErrors.find(e => e.param==='name') ? 'red;' : 'non;e' %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" value="<%= input.email %>" style="border-color: <%= validationErrors.find(e => e.param==='email') ? 'red;' : 'none;' %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" value="<%= input.password %>" style="border-color: <%= validationErrors.find(e => e.param==='password') ? 'red;' : 'none;' %>">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control" name="confirmPassword" value="<%= input.confirmPassword %>" style="border-color: <%= validationErrors.find(e => e.param==='confirmPassword') ? 'red;' : 'none;' %>">
                    </div>
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <button type="submit" class="btn btn-primary">Signup</button>
                </form>
                <hr>
                <div class="text-center">
                    <p>Already a user? <a href="/login">Login</a></p>
                </div>
            </div>
        </div>
<%-include('../includes/end.ejs')%>