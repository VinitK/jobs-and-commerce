<%-include('../includes/head.ejs')%>
        <title><%=docTitle%></title>
    </head>
    <body>
        <%-include('../includes/navigation.ejs')%>
        <div class="jumbotron">
            <div class="container">
                <h1 class="display-4"><%=docTitle%></h1>
            </div>
        </div>
        <div class="container">
            <div class="col-sm-4 offset-sm-4">
                <form action="/login" method="POST">
                    <% if (message.error) { %>
                        <div class="alert alert-warning" role="alert">
                            <%= message.error %>
                        </div>
                    <% } %>
                    <% if (message.success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= message.success %>
                        </div>
                    <% } %>
                    <% if (message.info) { %>
                        <div class="alert alert-info" role="alert">
                            <%= message.info %>
                        </div>
                    <% } %>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" value="<%= input.email %>" style="border-color: <%= validationErrors.find(e => e.param==='email') ? 'red;' : 'none;' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" value="<%= input.password %>" style="border-color: <%= validationErrors.find(e => e.param==='password') ? 'red;' : 'none;' %>">
                    </div>
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <button type="submit" name="login" class="btn btn-primary">Login</button>
                    <button type="submit" name="forgotPassword" class="btn btn-link">Forgot Password</button>
                </form>
            </div>
        </div>
<%-include('../includes/end.ejs')%>