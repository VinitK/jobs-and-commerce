<%-include('../includes/head.ejs')%>
        <title class="display-4"><%=docTitle%></title>
    </head>
    <body>
        <%-include('../includes/navigation.ejs')%>
        <div class="jumbotron">
            <div class="container">
                <h1><%=docTitle%></h1>
            </div>
        </div>
        <div class="container">
            <div class="col-sm-4 offset-sm-4">
                <div class="form-group">
                    <h5><%=input.userName%></h5>
                </div>
                <% if (errorMessage) { %>
                    <div class="alert alert-warning" role="alert">
                        <%=errorMessage%>
                    </div>
                <% } %>
                <form action="/reset" method="POST">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" value="<%= input.password %>">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control" name="confirmPassword" value="<%= input.confirmPassword %>">
                    </div>
                    <input type="hidden" name="resetToken" value=<%= input.resetToken %>>
                    <input type="hidden" name="userId" value=<%= input.userId %>>
                    <input type="hidden" name="userName" value=<%= input.userName %>>
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <button type="submit" name="login" class="btn btn-primary">Update Password</button>
                </form>
            </div>
        </div>
<%-include('../includes/end.ejs')%>